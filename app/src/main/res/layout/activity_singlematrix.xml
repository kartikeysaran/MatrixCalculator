<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singlematrix"
    android:background="@drawable/solarlight"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matrix Operations"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Matrix A"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"

                android:layout_row="0"
                android:layout_column="0"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rows"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:ems="2"
                android:padding="10dp"
                android:id="@+id/editRowsA"
                android:text="3"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Columns"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"

                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnSpan="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:ems="2"
                android:padding="10dp"
                android:id="@+id/editColsA"
                android:text="3"
                android:layout_row="1"
                android:layout_column="3"
                android:gravity="right"
                android:layout_columnSpan="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET"
                android:id="@+id/buttonA"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:layout_row="1"
                android:layout_column="4"
                android:layout_columnSpan="1"
                android:background="@drawable/custombutton"
                android:layout_gravity="right"/>

        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/matrixA">

        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Matrix B"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rows"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/editRowsB"
                android:text="3"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="#FFFFFF"
                android:gravity="right"
                android:layout_columnSpan="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="10dp"
                android:text="Columns"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"

                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnSpan="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/editColsB"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:text="3"
                android:layout_row="1"
                android:layout_column="3"
                android:gravity="right"
                android:layout_columnSpan="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="SET"
                android:id="@+id/buttonB"
                android:layout_row="1"
                android:layout_column="4"
                android:textColor="#FFFFFF"
                android:background="@drawable/custombutton"
                android:layout_columnSpan="1"
                android:layout_gravity="right"/>

        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/matrixB">

        </GridLayout>
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:rowCount="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+B"
                    android:id="@+id/add"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custombutton"
                    android:padding="10dp"
                    />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-B"
                    android:id="@+id/sub"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/custombutton"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-A"
                    android:id="@+id/sub2"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:background="@drawable/custombutton"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A*b"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:background="@drawable/custombutton"
                    android:id="@+id/mul"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custombutton"
                    android:padding="10dp"
                    android:text="b*a"
                    android:textColor="#FFFFFF"
                    android:id="@+id/mul2"
                    />
            </GridLayout>
        </HorizontalScrollView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:columnCount="2">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/toggleButton"
                android:textColor="#FFFFFF"
                android:textOff="A"
                android:textOn="B"
                android:padding="10dp"
                android:background="@drawable/custombutton"
                android:checked="false"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"
                        android:text="Transpose"
                        android:background="@drawable/custombutton"
                        android:id="@+id/transpose" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Inverse"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/custombutton"
                        android:id="@+id/inverse" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scale"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:background="@drawable/custombutton"
                        android:id="@+id/scalar" />



                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:padding="10dp"
                        android:textColor="#FFFFFF"

                        android:ems="10"
                        android:id="@+id/scaleNum" />
                </GridLayout>
            </HorizontalScrollView>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Determinant"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:background="@drawable/custombutton"
                android:id="@+id/determinant" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:padding="10dp"
                android:background="@drawable/custombutton"
                android:textColor="#FFFFFF"
                android:id="@+id/rank" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swap A B"
                android:id="@+id/swap1"
                android:layout_column="0"
                android:textColor="#FFFFFF"
                android:padding="10dp"
                android:layout_row="1"
                android:background="@drawable/custombutton"
                android:layout_columnSpan="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swap b a"
                android:id="@+id/swap2"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:layout_column="1"
                android:background="@drawable/custombutton"
                android:layout_row="1"/>
            <Button
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="swap  a c"
                android:id="@+id/swap3"
                android:layout_column="2"
                android:padding="10dp"
                android:background="@drawable/custombutton"
                android:layout_row="1"/>


        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Result C:"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/textView2" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/matrixC">

        </GridLayout>
    </LinearLayout>
</ScrollView>







</LinearLayout>